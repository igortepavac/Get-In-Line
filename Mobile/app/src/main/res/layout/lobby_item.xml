<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/lobby_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/spacing_default"
        app:cardElevation="3dp"
        app:cardCornerRadius="4dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        
        <ImageView
                android:id="@+id/lobby_img"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="@dimen/spacing_small"
                tools:src="@mipmap/ic_launcher"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lobby_img"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Football"/>

        <TextView
                android:id="@+id/number_of_players"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lobby_img"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/spacing_micro"
                android:layout_marginStart="@dimen/spacing_micro"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                tools:text="13/22"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lobby_img"
                android:layout_toLeftOf="@id/number_of_players"
                android:layout_toStartOf="@id/number_of_players"
                android:textSize="18sp"
                tools:text="Players:"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>